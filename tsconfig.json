{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "skipLibCheck": true,

        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
        ],

        "sourceMap": false,
        "inlineSourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules"
    ]
}